<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- Specifies the shortcuts to be created by an installer on a WINDOWS system. -->

<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="FreeCol" location="applications"/>
    
    <shortcut name="FreeCol"
              target="$INSTALL_PATH\freecol.exe"
              commandLine="--splash"
              workingDirectory="$INSTALL_PATH"
              description="FreeCol"
              iconFile="$INSTALL_PATH\freecol.exe"
              iconIndex="0"
              initialState="normal"
              programGroup="yes"
              desktop="yes"
              applications="no"
              startMenu="no"
              startup="no"
    />
    
    <shortcut name="FreeCol (windowed)"
              target="$INSTALL_PATH\freecol.exe"
              commandLine="--splash --windowed"
              workingDirectory="$INSTALL_PATH"
              description="FreeCol - Windowed"
              iconFile="$INSTALL_PATH\freecol.exe"
              iconIndex="0"
              initialState="normal"
              programGroup="yes"
              desktop="no"
              applications="no"
              startMenu="no"
              startup="no"
    />
    
    <shortcut name="Uninstaller"
              target="$INSTALL_PATH\Uninstaller\uninstaller.exe"
              commandLine=""
              workingDirectory="$INSTALL_PATH\Uninstaller"
              description="Uninstall FreeCol"
              iconFile="$INSTALL_PATH\Uninstaller\uninstaller.exe"
              iconIndex="0"
              initialState="normal"
              programGroup="yes"
              desktop="no"
              applications="no"
              startMenu="no"
              startup="no"
    />
    
    <shortcut name="FreeCol Website"
              target="http://www.freecol.org"
              description="The FreeCol Website"
              iconFile="$INSTALL_PATH\freecol.exe"
              iconIndex="0"
              programGroup="yes"
              desktop="no"
              applications="no"
              startMenu="no"
              startup="no"
    />  
</shortcuts>
              
