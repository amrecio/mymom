    <tile-type name="grassland"  basic-move-cost="3" defence-bonus="0">  <when-forested name="coniferForest"   basic-move-cost="6" defence-bonus="50" /> </tile-type>
    <tile-type name="prairie"    basic-move-cost="3" defence-bonus="0">  <when-forested name="broadleafForest" basic-move-cost="6" defence-bonus="50" /> </tile-type>
    <tile-type name="savannah"   basic-move-cost="3" defence-bonus="0">  <when-forested name="tropicalForest"  basic-move-cost="6" defence-bonus="50" /> </tile-type>
    <tile-type name="marsh"      basic-move-cost="6" defence-bonus="25"> <when-forested name="wetlandForest"   basic-move-cost="9" defence-bonus="50" /> </tile-type>
